@model List<LMSCoreMVC.Models.StudentSubjects>
@{
    ViewData["Title"] = "Subjects";
    var allSubjects = ViewBag.AllSubjects as List<LMSCoreMVC.Models.Subjects>;
}

<div class="container mt-5">
    <h2>Select MCA Subject</h2>

    <form asp-action="AddSubject" method="post" class="row g-3 mb-4">
        <div class="col-md-6">
            <label for="subjectId" class="form-label">Subject</label>
            <select class="form-select" id="subjectId" name="subjectId" required>
                <option value="">-- Select Subject --</option>
                @foreach (var subject in allSubjects)
                {
                    <option value="@subject.Id">@subject.Name (@subject.CreditPoints credits)</option>
                }
            </select>
        </div>
        <div class="col-md-3 align-self-end">
            <button type="submit" class="btn btn-primary">Add Subject</button>
        </div>
    </form>

    <h3>Your Selected Subjects</h3>
    @if (Model.Count > 0)
    {
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Subject</th>
                    <th>Credit Points</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ss in Model)
                {
                    <tr>
                        <td>@ss.Subject.Name</td>
                        <td>@ss.Subject.CreditPoints</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No subjects selected yet.</p>
    }
</div>

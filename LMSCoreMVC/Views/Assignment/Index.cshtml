@model IEnumerable<LMSCoreMVC.Models.Assignment>

@{
    ViewData["Title"] = "Assignment Submission";
}

<div class="container mt-5">
    <h2>Submit Assignment</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-info">@TempData["Success"]</div>
    }

    <form asp-controller="Assignment" asp-action="Submit" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label>Assignment Name</label>
            <input type="text" name="AssignmentName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Subject</label>
            <input type="text" name="Subject" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Submission Date</label>
            <input type="date" name="SubmissionDate" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Teacher Name</label>
            <input type="text" name="TeacherName" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Upload File</label>
            <input type="file" name="file" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <hr />

    <h3>Submitted Assignments</h3>
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Assignment Name</th>
                <th>Subject</th>
                <th>Submission Date</th>
                <th>Teacher</th>
                <th>File</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AssignmentName</td>
                    <td>@item.Subject</td>
                    <td>@item.SubmissionDate.ToShortDateString()</td>
                    <td>@item.TeacherName</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.FilePath))
                        {
                            <a class="btn btn-link" target="_blank" asp-controller="Assignment" asp-action="ViewFile" asp-route-path="@item.FilePath">View</a>
                        }
                        else
                        {
                            <span class="text-danger">No File</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model List<LMSCoreMVC.Models.Assignment>

<h2>📄 Assignment Submissions</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<a class="btn btn-primary mb-3" href="/Assignment/Submit">Submit New Assignment</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Assignment</th>
            <th>Subject</th>
            <th>Teacher</th>
            <th>Submitted By</th>
            <th>Status</th>
            <th>Submitted At</th>
            <th>File</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.AssignmentName</td>
                <td>@a.Subject</td>
                <td>@a.TeacherName</td>
                <td>@a.StudentName</td>
                <td>@a.Status</td>
                <td>@a.SubmittedAt.ToString("dd MMM yyyy, hh:mm tt")</td>
                <td>
                    <a href="/Assignment/ViewFile?path=@a.FilePath" target="_blank">Download</a>
                </td>
                <td>
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="id" value="@a.Id" />
                        <select name="status" class="form-control d-inline w-auto">
                            <option value="Accepted">Accept</option>
                            <option value="Rejected">Reject</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-outline-success">Update</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

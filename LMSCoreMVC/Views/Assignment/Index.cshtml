@model List<LMSCoreMVC.Models.Assignment>

<h2>📄 Assignment Submissions</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<a class="btn btn-primary mb-3" href="/Assignment/Submit">Submit New Assignment</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Assignment</th>
            <th>Subject</th>
            <th>Teacher</th>
            <th>Submitted By</th>
            <th>Status</th>
            <th>Submitted At</th>
            <th>File</th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.AssignmentName</td>
                <td>@a.Subject</td>
                <td>@a.TeacherName</td>
                <td>@a.StudentName</td>
                <td>@a.Status</td>
                <td>@a.SubmittedAt.ToString("dd MMM yyyy, hh:mm tt")</td>
                <td>
                    <a href="/Assignment/ViewFile?path=@a.FilePath" target="_blank">Download</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>

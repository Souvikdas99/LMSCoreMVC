@model IEnumerable<LMSCoreMVC.Models.Assignment>

@{
    var role = Context.Session.GetString("Role");
}

<h2>Submitted Assignments (Admin Panel)</h2>

@if (role != "Admin")
{
    <div class="alert alert-danger">Unauthorized access.</div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Assignment Name</th>
                <th>Subject</th>
                <th>Student</th>
                <th>Teacher</th>
                <th>Submitted At</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.AssignmentName</td>
                    <td>@item.Subject</td>
                    <td>@item.StudentName</td>
                    <td>@item.TeacherName</td>
                    <td>@item.SubmittedAt.ToString("g")</td>
                    <td>@item.Status</td>
                    <td>
                        <a href="@Url.Action("ViewFile", "Assignment", new { path = item.FilePath })" class="btn btn-sm btn-primary">View</a>

                        @if (item.Status == "Pending")
                        {
                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="status" value="Accepted" />
                                <button class="btn btn-sm btn-success">Accept</button>
                            </form>

                            <form asp-action="UpdateStatus" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.Id" />
                                <input type="hidden" name="status" value="Rejected" />
                                <button class="btn btn-sm btn-danger">Reject</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

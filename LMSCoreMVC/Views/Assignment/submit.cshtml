@model LMSCoreMVC.Models.Assignment

<h2>Submit Assignment</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="Submit" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Assignment Name</label>
        <input asp-for="AssignmentName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Subject</label>
        <input asp-for="Subject" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Submission Date</label>
        <input asp-for="SubmissionDate" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Teacher Name</label>
        <input asp-for="TeacherName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Student Name</label>
        <input asp-for="StudentName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Upload File</label>
        <input type="file" name="file" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success mt-3">Submit</button>
</form>

@model List<LMSCoreMVC.Models.Test>

<h2>Test List</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<a href="/Test/Create" class="btn btn-primary mb-3">Add New Test</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Subject</th>
            <th>Test Date</th>
            <th>Full Marks</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var test in Model)
        {
            <tr>
                <td>@test.Subject</td>
                <td>@test.TestDate.ToShortDateString()</td>
                <td>@test.FullMarks</td>
                <td>@test.Description</td>
                <td>
                    <form asp-action="Delete" method="post" onsubmit="return confirm('Delete this test?');">
                        <input type="hidden" name="id" value="@test.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>


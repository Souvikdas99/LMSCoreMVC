@model IEnumerable<IGrouping<string, LMSCoreMVC.Models.SubjectSelection>>
@{
    ViewData["Title"] = "Manage Subjects";
    Layout = "_AdminLayout";
    var availableSubjects = ViewBag.Subjects as List<LMSCoreMVC.Models.SubjectSelection>;
}

<h2 class="mb-4 text-center">🎓 Manage Student Subjects</h2>

<div class="container">
    @foreach (var group in Model)
    {
        <div class="card mb-3 shadow">
            <div class="card-header bg-dark text-white" style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#collapse-@group.Key.Replace(" ", "").Replace(".", "").Replace("@", "")">
                <strong>Student: @group.Key</strong>
            </div>

            <div class="collapse" id="collapse-@group.Key.Replace(" ", "").Replace(".", "").Replace("@", "")">
                <div class="card-body row">
                    @foreach (var subject in group)
                    {
                        <div class="col-md-4 mb-3">
                            <div class="card h-100 border-primary">
                                <div class="card-body">
                                    <form method="post" asp-action="UpdateSubject" asp-controller="Admin">
                                        <input type="hidden" name="id" value="@subject.Id" />

                                        <div class="mb-2">
                                            <label class="form-label">Subject</label>
                                            <select name="subjectName" class="form-select" required>
                                                @foreach (var s in availableSubjects.Select(a => a.SubjectName).Distinct())
                                                {
                                                    <option value="@s" selected="@(subject.SubjectName == s)">
                                                        @s
                                                    </option>
                                                }
                                            </select>
                                        </div>

                                        <div class="mb-2">
                                            <label class="form-label">Credit Points</label>
                                            <input type="number" name="creditPoints" class="form-control" value="@subject.CreditPoints" required />
                                        </div>

                                        <div class="d-flex justify-content-between mt-2">
                                            <button type="submit" class="btn btn-sm btn-success">Update</button>

                                        </div>
                                    </form>
                                    <!-- ✅ DELETE FORM (separate) -->
                                    <form method="post" asp-action="DeleteSubject" asp-controller="Admin" asp-route-id="@subject.Id" class="mt-2" onsubmit="return confirm('Are you sure you want to delete this subject?')">
                                        <div class="d-flex justify-content-between mt-2">
                                              <button type="submit" class="btn btn-sm btn-danger w-100">Delete</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
